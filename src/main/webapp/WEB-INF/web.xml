<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Blog Management Web Application</display-name>

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>info.anastasios.java_northwind.servlets.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomersServlet</servlet-name>
        <servlet-class>info.anastasios.java_northwind.servlets.CustomersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomersServlet</servlet-name>
        <url-pattern>/Customers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>info.anastasios.java_northwind.servlets.ProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/Products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TestCustomersOrderDetailsJSONServlet</servlet-name>
        <servlet-class>info.anastasios.java_northwind.servlets.TestCustomersOrderDetailsJSONServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestCustomersOrderDetailsJSONServlet</servlet-name>
        <url-pattern>/CustomersOrderDetailsJSON</url-pattern>
    </servlet-mapping>

</web-app>